  "main": "index",

  "preferGlobal": false,

  "author": {
    "name": "Colin Jack"
  },

  "repository": {
    "type": "git",
    "url": "https://github.com/colin-jack/testresources.git"
  },

  "dependencies": {
    "superagent": "*",
    "objectcompare" : "*",
